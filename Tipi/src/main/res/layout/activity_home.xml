<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.romainpiel.lib.ui.view.TopCenterImageView
            android:id="@+id/activity_home_wallpaper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    <com.romainpiel.lib.ui.view.TopCenterImageView
            android:id="@+id/activity_home_wallpaper_blurred"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="0"/>

    <com.romainpiel.lib.ui.view.PageableListView
            android:id="@+id/activity_home_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@android:color/transparent"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:fadingEdge="none"
            android:dividerHeight="5dp"
            android:divider="@android:color/transparent"/>

</FrameLayout>